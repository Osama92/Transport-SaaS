{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["components/**/*.ts", "components/**/*.tsx", "contexts/**/*.ts", "contexts/**/*.tsx", "firebase/**/*.ts", "hooks/**/*.ts", "services/**/*.ts", "utils/**/*.ts", "types.ts", "App.tsx", "main.tsx", "i18n.ts"],
  "exclude": ["node_modules", "dist", "functions", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
